# Production Environment Variables Template
# Copy this file to .env.production and fill in your values

PORT=5000
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/obudms?retryWrites=true&w=majority
JWT_SECRET=your_super_secure_random_string_at_least_32_characters_long
NODE_ENV=production
ALLOWED_ORIGIN=https://your-frontend-domain.vercel.app

